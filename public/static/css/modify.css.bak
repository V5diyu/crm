/*modify*/


/*page:index statistics*/
.index .statistics{
    margin-top: .1rem;
    background-color: #fff;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
}
.index .statistics .top{
    display: flex;
    padding: 0 15px;
    height: .42rem;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #e8e8e8;
}
.index .statistics .top .left{
    display: flex;
    align-items: center;
}
.index .statistics .top .left .headimg{
    display: inline-block;
    height: .3rem;
    width: .3rem;
    margin-right: 5px;
    text-align: center;
    line-height: .3rem;
    color: #ffffff;
    background-color: #1295D9;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    border-radius: 50%;
}
.index .statistics .top .nickname{
    color: #333;
    font-size: .14rem;
}
.index .statistics .top .right{
    display: flex;
    align-items: center;
}
.index .statistics .top .right .select{
    color: #1295D9;
    font-size: .14rem;
}



.index .statistics .list{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.index .statistics .list .item{
    width: 33.33%;
    padding: .05rem 0;
    text-align: center;
}
.index .statistics .list .item-charge{
    width: 50%;
    padding: .05rem 0;
    text-align: center;
}
.index .statistics .list .item .p1{
    font-size: .2rem;
    color: #666;
    margin-bottom: .1rem;
    font-weight: bold;
}
.index .statistics .list .item .p2{
    font-size: .12rem;
    color: #999;
}



/*page:index charts*/

.index .charts{
    margin-top: .1rem;
    background-color: #fff;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
}
.index .charts .top{
    display: flex;
    padding: 0 15px;
    height: .42rem;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #e8e8e8;
}
.index .charts .top .left{
    display: flex;
    align-items: center;
    color: #333;
    font-size: .14rem;
    font-weight: bold;
}
.index .charts .top .right{
    display: flex;
    align-items: center;
}
.index .charts .top .right .select{
    color: #1295D9;
    font-size: .14rem;
}

/* 一行显示 */
.index .charts .list {
        display: flex;
        flex-wrap: wrap;
}
.index .charts .list .item{
    width: 33.33%;
}
.index .charts .list .item{
    display: flex;
    width: 30%;
    justify-content: flex-start;
    align-items: center;
    padding: .1rem;
    color: #666;
    border-bottom: 1px solid #F6F6F6;
}
.index .charts .list .item:last-child{
    border-bottom: none;
}
.index .charts .list .item .img{
    display: inline-block;
    height: .3rem;
    width: .3rem;
    line-height: .3rem;
    text-align: center;
    background-color: #1295D9;
    color: #ffffff;
    margin: 0 .1rem;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 50%;
}
.index .charts .list .item .name{
    flex: 1;
    font-size: .14rem;
    /*font-weight: bold;*/
}
.index .charts .more{
    display: flex;
    height: .3rem;
    justify-content: center;
    border-top: 1px solid #f5f5f5;
    align-items: center;
    color: #999;
    font-size: .14rem;
}



/*page:index record*/
.index .record {
    margin-top: .1rem;
    background-color: #fff;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
}
.index .record .top{
    display: flex;
    padding: 0 15px;
    height: .42rem;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #e8e8e8;
}
.index .record .top .left{
    display: flex;
    align-items: center;
    color: #333;
    font-size: .14rem;
    font-weight: bold;
}
.index .record .list ,.btn{
    display: flex;
    flex-wrap: wrap;
}
.index .record .list .item{
    width: 48%;
    margin-top: 5px;
    margin-bottom: 5px;
}
.index .record .btn .bt-left,
.bt-right {
    flex: 2;
    height: 30px;
    margin: 10px 30px 0px 30px;
    border: none;
    line-height: 30px;
    font-size: .14rem;
    background-color: #3385ff;
    color: #fff;
}
/* 输入框 */
.index .record .list .item input{
    height: .3rem;
    line-height: .3rem;
    text-indent: .1rem;
    border: 1px solid #ddd;
    color: #999;
    font-size: .14rem;
}
.index .record .list .item-bt input{
    height: .3rem;
    line-height: .3rem;
    text-indent: .1rem;
    border: 1px solid #ddd;
    color: #999;
    font-size: .14rem;
}
/* 文字 */
.index .record .list .item, .item-bt .txt {
    color: #333;
    font-size: .14rem;
}
/* 输入框*/
.index .record .list .item-bt input{
    width: 72%;
}
.index .record .item input{
    width: 60%;
}